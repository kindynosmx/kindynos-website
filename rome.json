{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "tab",
		"indentSize": 2,
		"lineWidth": 80,
		"ignore": [
			"node_modules",
			".next",
			"public/sw.js",
			"public/sw.js.map",
			"public/workbox-*.js"
		]
	},
	"linter": {
		"enabled": true,
		"ignore": ["node_modules"],
		"rules": {
			"recommended": true,
			"suspicious": {
				"noShadowRestrictedNames": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off",
				"useValidAnchor": "warn",
				"noSvgWithoutTitle": "off"
			}
		}
	}
}
